{
  "name": "ai-code-review-platform",
  "version": "1.0.0",
  "description": "AI Code Review and Architecture Analysis Platform - Root Package",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "cd frontend && npm run build",
    "start": "cd frontend && npm run dev",
    "build:ai": "bash scripts/setup_ai.sh",
    "start:ai": "docker-compose up -d",
    "test:ai": "curl -X POST http://localhost:8090/route -d '{\"code\":\"test\"}'",
    "build:frontend": "cd frontend && npx vite build",
    "dev:frontend": "cd frontend && npx vite --host 0.0.0.0 --port 3000",
    "dev:windows": "cd frontend && npx vite --host 0.0.0.0 --port 3000",
    "setup:windows": "setup_windows.bat"
  },
  "keywords": [
    "ai",
    "code-review",
    "architecture",
    "analysis",
    "docker",
    "fastapi",
    "react"
  ],
  "author": "Platform Team <platform-team@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/example/ai-code-review-platform.git"
  },
  "bugs": {
    "url": "https://github.com/example/ai-code-review-platform/issues"
  },
  "homepage": "https://github.com/example/ai-code-review-platform#readme"
}
