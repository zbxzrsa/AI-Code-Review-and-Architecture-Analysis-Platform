# Three-Channel AI Configuration
APP_ENV=dev
API_PORT=8000
FRONTEND_PORT=3000
AI_CHANNEL=stable

# Structured AI Review Mode
AI_STRUCTURED_MODE=true

# Database Configuration
DATABASE_URL=postgresql+psycopg://app:app@db:5432/app
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_URL=redis://localhost:6379/1
REDIS_POOL_SIZE=50

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3
CELERY_TASK_ACKS_LATE=true
CELERY_TASK_REJECT_ON_WORKER_LOST=true
CELERY_WORKER_CONCURRENCY=4
CELERYD_PREFETCH_MULTIPLIER=1
CELERY_TASK_SOFT_TIME_LIMIT=840
CELERY_TASK_TIME_LIMIT=900
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_BURST_SIZE=100

# API Configuration
API_V1_PREFIX=/api/v1
API_DOCS_URL=/docs
API_REDOC_URL=/redoc
API_OPENAPI_URL=/openapi.json

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_UPLOAD_EXTENSIONS=.py,.js,.ts,.jsx,.tsx,.java,.go,.rs,.cpp,.c,.h
UPLOAD_DIR=/tmp/uploads

# S3/MinIO Configuration
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true
S3_SECURE=false
ARTIFACTS_BUCKET=artifacts
BACKUP_BUCKET=backups

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000
CACHE_EVICTION_POLICY=LRU

# Monitoring Configuration
PROMETHEUS_PORT=9464
PROMETHEUS_METRICS_PATH=/metrics
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_CORRELATION_ID_HEADER=X-Correlation-ID

# AI Model Configuration (Free Local Models)
AI_MODEL_CACHE_TTL=86400
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7
AI_TOP_P=0.9
AI_TOP_K=50
AI_REQUEST_TIMEOUT=300
AI_MAX_CONCURRENT_REQUESTS=10

# Vercel deployment URLs (add your Vercel preview/prod domains here)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-app.vercel.app,https://preview-your-app.vercel.dev

# Neo4j Configuration
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4jpassword
NEO4J_DATABASE=neo4j
NEO4J_MAX_CONNECTION_POOL_SIZE=50

# External Services
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8000/auth/github/callback

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_GITHUB_OAUTH=true
ENABLE_METRICS=true
ENABLE_TRACING=false

# Development/Testing
DEBUG=false
TESTING=false
ENVIRONMENT=development