FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    pyyaml==6.0.1 \
    fastapi==0.104.1 \
    uvicorn==0.24.0

# Copy version router and AI versions
COPY ai_versions/ ./ai_versions/
COPY version_router.py ./

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8000/health || exit 1

EXPOSE 8000

CMD ["uvicorn", "version_router:app", "--host", "0.0.0.0", "--port", "8000"]